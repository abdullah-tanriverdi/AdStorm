<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Uygulamanın bildirim gönderebilmesi için gerekli izin -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- Uygulamanın cihaz başlatıldığında (boot completed) çalışabilmesi için gerekli izin -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AdStormEterna"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Ön plan hizmeti -->
        <service
            android:name=".ForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location"/>

        <!-- Cihaz durumu alıcısı -->
        <receiver android:name=".DeviceStateReceiver" android:enabled="true" android:exported="false">
            <intent-filter>
                <!-- Cihaz başlatıldığında (boot completed) tetiklenen eylem -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!-- Ekran açıldığında tetiklenen eylem -->
                <action android:name="android.intent.action.SCREEN_ON" />
                <!-- Ekran kapandığında tetiklenen eylem -->
                <action android:name="android.intent.action.SCREEN_OFF" />
            </intent-filter>
        </receiver>


    </application>

</manifest>